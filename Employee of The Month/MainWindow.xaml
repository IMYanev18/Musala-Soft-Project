<Window x:Class="Employee_of_The_Month.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_of_The_Month"
        mc:Ignorable="d"
        MinWidth="700"
        MinHeight="450"
        Title="Employee of The Month" Height="450" Width="800">
    <Grid x:Name="main">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--Login Page-->
        <Frame x:Name="Background" Visibility="Visible" Grid.RowSpan="10" Grid.ColumnSpan="7" Background="#E08F52"/>

        <TextBlock x:Name="UsernameLogin" Text="USERNAME" Visibility="Visible" TextWrapping="Wrap" Grid.Column="2" Grid.Row="5" FontSize="25" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Bahnschrift Light Condensed" Margin="0,0,10,0"/>
        <TextBox x:Name="UsernameBoxLogin" Visibility="Visible" Grid.Column="3" Grid.Row="5" Grid.ColumnSpan="2" Margin="25,5,65,10" MaxHeight="35" MinHeight="35" FontSize="22" MaxWidth="215" />

        <TextBlock x:Name="PasswordLogin" Text="PASSWORD" Visibility="Visible" Grid.Column="2" Grid.Row="6" FontSize="25" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Bahnschrift Light Condensed" Margin="0,0,10,0"/>
        <PasswordBox x:Name="PasswordBoxLogin" Visibility="Visible" Grid.Column="3" Grid.Row="6" Grid.ColumnSpan="2" Margin="25,5,65,10" MaxHeight="35" MinHeight="35" FontSize="22" MaxWidth="215"/>

        <Button x:Name="SignInButton" Visibility="Visible" Content="Sign In" Grid.Column="3" Grid.Row="7" Grid.ColumnSpan="2" Margin="60,10,100,10" MaxHeight="35" MaxWidth="150" MinWidth="80" Click="SignIn"/>

        <!--Main Menu Page-->
        <StackPanel Visibility="Hidden" x:Name="MainMenuPanel" Grid.Column="2" Grid.Row="4" Grid.RowSpan="5" Grid.ColumnSpan="3">
            <ContentControl>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="MMVote"  Content="Vote" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Margin="10" MaxWidth="200" MaxHeight="50" MinHeight="40" Click="MMVote_Click"/>
                    <Button x:Name="MMCurrentStandings"  Content="Current Standings" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="10" MaxWidth="200" MaxHeight="50" MinHeight="40" Click="MMCurrentStandings_Click"/>
                    <Button x:Name="MMPossiblePrizes"  Content="Possible Prizes" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"  Margin="10" MaxWidth="200" MaxHeight="50" MinHeight="40"/>
                    <Button x:Name="MMInfoRules"  Content='Info and Rules' Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3"  Margin="10" MaxWidth="200" MaxHeight="50" MinHeight="40"/>

                </Grid>
            </ContentControl>
        </StackPanel>

        <TextBlock Text="Employee" Grid.Column="3" Grid.Row="1" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Bahnschrift Condensed"/>
        <TextBlock Text="of" Grid.Column="3" Grid.Row="2" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Text="The Month" Grid.Column="3" Grid.Row="3" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Bahnschrift Condensed"/>

        <!--Vote Page-->
        <StackPanel x:Name="Vote" Visibility="Hidden" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <ComboBox x:Name="VoteComboBox" Margin="120,15,120,0" MaxWidth="250" MinWidth="150" Height="30">
                <ComboBoxItem>Stupid1</ComboBoxItem>
                <ComboBoxItem>Stupid2</ComboBoxItem>
                <ComboBoxItem>Stupid3</ComboBoxItem>
                <ComboBoxItem>Stupid4</ComboBoxItem>
            </ComboBox>
            <Button Content="VOTE" Margin="0,60,0,0" MaxWidth="120" MinHeight="30" MaxHeight="40" Click="Button_Click"/>
        </StackPanel>


        <!--Current Standings Page-->
        <ScrollViewer x:Name="CurrentStandings" Visibility="Hidden" Grid.Row="4" Grid.Column="2" Grid.RowSpan="5" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <UniformGrid Rows="13" Columns="3">
                    
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>


        <!--Possible Prizes Page-->



        <!--Info & Rules Page-->




    </Grid>
</Window>
